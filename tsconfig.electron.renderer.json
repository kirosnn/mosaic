{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "src/electron/renderer/dist",
    "rootDir": "src/electron/renderer/src",
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src/electron/renderer/src/**/*"
  ]
}
